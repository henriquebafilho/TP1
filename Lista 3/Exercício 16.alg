algoritmo "semnome"
// Função :
// Autor :
// Data : 24/03/2018
// Seção de Declarações
var
caloriasPrato,caloriasSobremesa,caloriasBebida,caloriasTotal : inteiro
prato,sobremesa,bebida : caracter
inicio
//Escreva um programa que receba o prato, a sobremesa e a bebida que o usuário consumiu e retorna a
//quantidade total de calorias.
escreval("Insira o código do prato desejado: ")
escreval("Vegetariano - v")
escreval("Peixe - p")
escreval("Frango - f")
escreval("Carne - c")
escreval("Nenhum - n")
leia(prato)
escreval("Insira o código da sobremesa desejada: ")
escreval("Abacaxi - a")
escreval("Sorvete Diet - sd")
escreval("Mousse Diet - md")
escreval("Mousse Chocolate - mc")
escreval("Nenhum - n")
leia(sobremesa)
escreval("Insira o código da bebida desejada: ")
escreval("Chá - c")
escreval("Suco de Laranja - sdl")
escreval("Suco de Melão - sdm")
escreval("Refrigerante Diet - rd")
escreval("Nenhum - n")
leia(bebida)

escolha prato
caso "v"
   caloriasPrato <- 180
caso "p"
   caloriasPrato <- 230
caso "f"
   caloriasPrato <- 250
caso "c"
   caloriasPrato <- 350
caso "n"
   caloriasPrato <- 0
fimescolha

escolha sobremesa
caso "a"
   caloriasSobremesa <- 75
caso "sd"
   caloriasSobremesa <- 110
caso "md"
   caloriasSobremesa <- 170
caso "mc"
   caloriasSobremesa <- 200
caso "n"
   caloriasSobremesa <- 0
fimescolha

escolha bebida
caso "c"
   caloriasBebida <- 20
caso "sdl"
   caloriasBebida <- 70
caso "sdm"
   caloriasBebida <- 100
caso "rd"
   caloriasBebida <- 65
caso "n"
   caloriasBebida <- 0
fimescolha

caloriasTotal <- caloriasPrato+caloriasSobremesa+caloriasBebida

se(caloriasPrato+caloriasSobremesa+caloriasBebida>0)entao
   escreval("O total de calorias é ",caloriasTotal)
senao
   escreval("Você não pediu nada.")
fimse

fimalgoritmo
